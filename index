<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flor Gerbera Colorida - Lore</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: radial-gradient(circle, #1a1a2e, #0a0a0a);
            overflow: hidden;
            font-family: 'Courier New', monospace;
        }
        canvas {
            display: block;
            filter: drop-shadow(0 0 25px rgba(255, 215, 0, 0.4));
        }
        .container {
            position: relative;
        }
        .controls {
            position: absolute;
            top: 20px;
            left: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .color-btn {
            padding: 10px 15px;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        }
        .color-btn:hover {
            transform: scale(1.05);
        }
        .title {
            position: absolute;
            top: 20px;
            right: 20px;
            color: #FFD700;
            font-size: 14px;
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container">
        <canvas id="florCanvas" width="800" height="800"></canvas>
        <div class="controls">
            <button class="color-btn" onclick="changeColor('rosa')" style="background: linear-gradient(45deg, #FFB6C1, #FF69B4);">üå∏ Rosa</button>
            <button class="color-btn" onclick="changeColor('azul')" style="background: linear-gradient(45deg, #87CEEB, #1E90FF);">üíô Azul</button>
            <button class="color-btn" onclick="changeColor('purpura')" style="background: linear-gradient(45deg, #D8BFD8, #9370DB);">üíú P√∫rpura</button>
            <button class="color-btn" onclick="changeColor('verde')" style="background: linear-gradient(45deg, #98FB98, #32CD32);">üíö Verde</button>
            <button class="color-btn" onclick="changeColor('original')" style="background: linear-gradient(45deg, #FFFFFF, #F5F5F5);">‚ö™ Original</button>
            <button class="color-btn" onclick="downloadImage()" style="background: linear-gradient(45deg, #FFD700, #FFA216);">üì• Guardala</button>
        </div>
     <div class="title">Gerbera para mi Lore de tony<br>‚ù§Ô∏è</div>
    </div>

    <script>
        const canvas = document.getElementById('florCanvas');
        const ctx = canvas.getContext('2d');
        
        const centerX = canvas.width / 2;
        const centerY = canvas.height / 2;
        
        // Variables para animaci√≥n
        let time = 0;
        let animationId;
        
        // ESQUEMAS DE COLOR - CAMBIA AQU√ç LOS COLORES
        const colorSchemes = {
            original: [
                ['rgba(255, 255, 255, 0.95)', 'rgba(255, 253, 245, 0.9)', 'rgba(255, 250, 240, 0.85)'],
                'Blanco Puro'
            ],
            rosa: [
                ['rgba(255, 182, 193, 0.95)', 'rgba(255, 192, 203, 0.9)', 'rgba(255, 105, 180, 0.85)'],
                'Rosa Suave'
            ],
            azul: [
                ['rgba(135, 206, 235, 0.95)', 'rgba(173, 216, 230, 0.9)', 'rgba(30, 144, 255, 0.85)'],
                'Azul Cielo'
            ],
            purpura: [
                ['rgba(216, 191, 216, 0.95)', 'rgba(221, 160, 221, 0.9)', 'rgba(147, 112, 219, 0.85)'],
                'P√∫rpura Lavanda'
            ],
            verde: [
                ['rgba(152, 251, 152, 0.95)', 'rgba(144, 238, 144, 0.9)', 'rgba(50, 205, 50, 0.85)'],
                'Verde Menta'
            ],
            coral: [
                ['rgba(255, 127, 80, 0.95)', 'rgba(240, 128, 128, 0.9)', 'rgba(205, 92, 92, 0.85)'],
                'Coral'
            ],
            lila: [
                ['rgba(230, 230, 250, 0.95)', 'rgba(216, 191, 216, 0.9)', 'rgba(186, 85, 211, 0.85)'],
                'Lila'
            ]
        };

        let currentColor = 'original';
        let petalColors = colorSchemes.original[0];

        // Funci√≥n para cambiar colores
        function changeColor(scheme) {
            currentColor = scheme;
            petalColors = colorSchemes[scheme][0];
        }

        function drawRoundedPetal(x, y, angle, length, width, layer, timeOffset) {
            const wave = Math.sin(time * 0.8 + timeOffset) * 0.08;
            const breath = 1 + Math.sin(time * 0.4 + timeOffset) * 0.1;
            
            ctx.save();
            ctx.translate(x, y);
            ctx.rotate(angle + wave);
            
            const petalLength = length * breath;
            const petalWidth = width * breath;
            
            // Crear p√©talo redondeado
            ctx.beginPath();
            ctx.moveTo(0, 0);
            
            // Curva superior del p√©talo
            ctx.bezierCurveTo(
                petalWidth * 0.6, -petalLength * 0.2,
                petalWidth * 0.8, -petalLength * 0.6,
                0, -petalLength
            );
            
            // Punta redondeada
            ctx.bezierCurveTo(
                -petalWidth * 0.2, -petalLength * 1.1,
                -petalWidth * 0.6, -petalLength * 0.6,
                -petalWidth * 0.4, -petalLength * 0.3
            );
            
            // Curva inferior
            ctx.bezierCurveTo(
                -petalWidth * 0.3, -petalLength * 0.1,
                -petalWidth * 0.2, 0,
                0, 0
            );
            
            // Gradiente con los colores actuales
            const gradient = ctx.createLinearGradient(0, 0, 0, -petalLength);
            gradient.addColorStop(0, petalColors[0]);
            gradient.addColorStop(0.5, petalColors[1]);
            gradient.addColorStop(0.8, petalColors[2]);
            gradient.addColorStop(1, petalColors[2].replace('0.85', '0.7'));
            
            ctx.fillStyle = gradient;
            ctx.strokeStyle = petalColors[0].replace('0.95', '0.4');
            ctx.lineWidth = 1.5;
            ctx.fill();
            ctx.stroke();
            
            ctx.restore();
        }

        function drawGoldenCenter() {
            const goldenAng = 137.508;
            const phi = goldenAng * (Math.PI / 180);
            
            ctx.save();
            
            for (let i = 0; i < 160; i++) {
                const r = 3.5 * Math.sqrt(i);
                const theta = i * phi;
                const x = r * Math.cos(theta);
                const y = r * Math.sin(theta);
                
                const rotation = time * 0.1 + i * 0.05;
                const scale = 0.8 + Math.sin(time * 0.5 + i * 0.1) * 0.3;
                
                ctx.save();
                ctx.translate(x, y);
                ctx.rotate(rotation);
                
                ctx.beginPath();
                ctx.ellipse(0, 0, 2.5 * scale, 1.2 * scale, 0, 0, Math.PI * 2);
                
                const goldenGradient = ctx.createRadialGradient(0, 0, 0, 0, 0, 3);
                goldenGradient.addColorStop(0, '#FFD700');
                goldenGradient.addColorStop(1, '#FFA216');
                
                ctx.fillStyle = goldenGradient;
                ctx.fill();
                
                ctx.restore();
            }
            
            // Centro dorado
            ctx.beginPath();
            ctx.arc(0, 0, 8, 0, Math.PI * 2);
            const centerGradient = ctx.createRadialGradient(0, 0, 0, 0, 0, 8);
            centerGradient.addColorStop(0, '#FFD700');
            centerGradient.addColorStop(1, '#FFA216');
            ctx.fillStyle = centerGradient;
            ctx.fill();
            
            ctx.restore();
        }

        function drawTextAnimation() {
            const nombre = "lore";
            const posiciones = [
                { x: -45, y: -5 },
                { x: -15, y: 0 }, 
                { x: 15, y: 0 },
                { x: 45, y: -5 }
            ];
            
            const textPulse = 1 + Math.sin(time * 1.8) * 0.08;
            
            ctx.save();
            ctx.shadowColor = 'rgba(255, 215, 0, 0.5)';
            ctx.shadowBlur = 10;
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            
            for (let i = 0; i < nombre.length; i++) {
                const letterWave = Math.sin(time * 2 + i * 0.8) * 2;
                
                ctx.save();
                ctx.translate(posiciones[i].x, posiciones[i].y + letterWave);
                
                ctx.font = `italic ${22 * textPulse}px 'Courier New'`;
                ctx.fillStyle = `rgba(255, 215, 0, 0.9)`;
                ctx.fillText(nombre[i], 0, 0);
                
                ctx.restore();
            }
            
            const glow = Math.sin(time * 1.2) * 0.3 + 0.7;
            ctx.font = `italic ${32 + glow * 8}px 'Courier New'`;
            ctx.fillStyle = `rgba(255, 215, 0, 0.9)`;
            ctx.shadowBlur = 15 + glow * 10;
            ctx.fillText('lore', 0, 0);
            
            ctx.restore();
        }

        function drawFlor() {
            // Fondo
            const gradient = ctx.createRadialGradient(
                centerX, centerY, 0,
                centerX, centerY, canvas.width / 2
            );
            gradient.addColorStop(0, '#1a1a2e');
            gradient.addColorStop(1, '#0a0a0a');
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            ctx.save();
            ctx.translate(centerX, centerY);
            
            // P√©talos con colores actuales
            for (let layer = 0; layer < 6; layer++) {
                const petalCount = 14 + layer * 3;
                for (let petal = 0; petal < petalCount; petal++) {
                    const angle = (petal / petalCount) * Math.PI * 2;
                    const petalLength = 100 + layer * 15;
                    const petalWidth = 20 + layer * 3;
                    const timeOffset = layer * 0.7 + petal * 0.15;
                    
                    drawRoundedPetal(0, 0, angle, petalLength, petalWidth, layer, timeOffset);
                }
            }
            
            drawGoldenCenter();
            drawTextAnimation();
            ctx.restore();
        }

        function animate() {
            time += 0.016;
            drawFlor();
            animationId = requestAnimationFrame(animate);
        }

        // Iniciar animaci√≥n
        animate();

        function downloadImage() {
            cancelAnimationFrame(animationId);
            time = 0;
            drawFlor();
            
            const link = document.createElement('a');
            link.download = `gerbera-${currentColor}-lore.png`;
            link.href = canvas.toDataURL();
            link.click();
            
            animate();
        }
    </script>
</body>
</html>
